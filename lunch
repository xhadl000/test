<script>
	var url = "https://schoolmenukr.ml/api/middle/E100000189?";

	$('#submit').click(function(){
		var year = $('select[name=year]').val();
		var month = $('select[name=month]').val();
		
		
		
		
		if(!year==""&&!month==""){
			$.ajax({
				url : url+"year="+year+"&month="+month,
				type : "get",
				beforeSend:function(){
					$('#loading').fadeIn("1000");
					alert(url+"year="+year+"&month="+month);
			    },
				success : function(data){
					$('#loading').css('display','none');
					$.each(data.menu,function(key,value){
						$('#bob').append(value.menu);
					});
					
				}
			});
		}		
		else{
			alert("날짜를 선택해주세요.");
		}
	
	});
</script>
